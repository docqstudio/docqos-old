BOOT=boot.bin
BOOTLOADSEG=0x1000
BOOTSTARTFUN=_start

ISO=os.iso

AS=as
CC=gcc
MKISO=mkisofs
LD=ld
RM=rm -rf
QEMU=qemu-system-x86_64
BOCHS=bochs

CFLAGS=
ASFLAGS=
MKISOFLAGS=-R -no-emul-boot -boot-load-seg $(BOOTLOADSEG) -b $(BOOT)
LDFLAGS_BOOT=--oformat binary -e $(BOOTSTARTFUN) -Ttext 0x0
LDFLAGS_ELF=
QEMUFLAGS=-cdrom $(ISO) -boot d
BOCHSFLAGS=
